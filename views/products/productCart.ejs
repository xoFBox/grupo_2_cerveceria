<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', style)%> 
<body>
   <%- include('../partials/header') %> 
    <main class="card-main">
        <section class="name-section"> 
           <div class="cant"><p>Cant</p></div>   
            <div class="imagenProd"><p>Producto</p></div>
            <div class="descripcion"><p>Descripción</p></div>
            <div class="subTotal"><p>Subtotal</p></div>
            <div class="eliminar"> </div>
        </section>
        <% aComprar.forEach((producto) =>{ %> 
        <form action="/products/cartDelete" method="POST" class="vendido" name="producto">
            <div class="id"><%= producto.id %></div>
            <div class="v-cant"><%= producto.quantity %></div>   
            <div class="v-imagenProd"><img src="/images/mini1.<%=producto.name%>.jpg" alt=<%= producto.name %> class="mini-img"></div>
            <div class="v-descripcion"><p><%=producto.name %></p></div>
            <div class="v-subTotal"><p><%= producto.subtotal %></p></div>
            <div class="v-eliminar"><button type="submit" value="eliminar" name="producto">X</button></div>
        </form>
        <% }) %> 
        <form action="/productCart.html" method="POST" class="vendido" name="producto">
            <div class="v-cant"><p></p></div>   
            <div class="v-imagenProd"><img class="mini-img"></div>
            <div class="v-descripcion"><p></p></div>
            <div class="v-subTotal"><p></p></div>
            <div class="v-eliminar"><button type="reset" value="eliminar" name="producto"></button></div>
        </form>
        <form action="/productCart.html" method="POST" class="vendido" name="producto">
            <div class="v-cant"><p></p></div>   
            <div class="v-imagenProd"><img class="mini-img"></div>
            <div class="v-descripcion"><p></p></div>
            <div class="v-subTotal"><p></p></div>
            <div class="v-eliminar"><button type="reset" value="eliminar" name="producto"></button></div>
        </form>
        <div class="end-table">
            <div> Total  </div>
            <input type="text" value=<%= total %>>
        </div>
        <br>
        <form action="/" method="post"><div class="a-pagar">
            <label name="pagar"><h3>Elija su forma de pago</h3>       
           <div class="opciones-pago"><br><input type="radio" name="pagar" value="1">Efectivo
            <br><input type="radio" name="pagar" value="2">Tarjeta de Débito
            <br><input type="radio" name="pagar" value="3">Tarjeta de Crédito <input type="number"/> cuotas
            <br><input type="radio" name="pagar" value="4">Transferencia </label></div> 
 
    <br><a href="/products"><button type="sumit" value="pagar" class="boton-pagar"><p>Pagar</p></button></a>
<button type="reset" value="cancelar" class="boton-cancelar"><p>Cancelar</p></button></form></div>
    <br>
    <%- include('../partials/footer') %> 
    
</body>
</html>