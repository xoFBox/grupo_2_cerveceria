<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head'), style %>
<body>
    <%- include('../partials/header') %>
<main>
    
    <section>
        <form action="/products/create" method="GET" >
            <button type="submit" class="action-button">CREAR PRODUCTO</button>
        </form>
        <div class="details-imgarticle">
         <% for(i=0; i<allProducts.length; i++){ %> 
          <article>
            <div class="id"><%=allProducts[i].id  %></div>
               <div class="details-descripcion">
                  <h4>  <%=allProducts[i].name %></h4>
                  <% if (allProducts[i].category == "cerveza") { %>
                  <p>ALC: <%=allProducts[i].ALC %> / IBU <%=allProducts[i].IBU %> </p>
               <% } %>
               </div>
               <a href="/products/detail/<%=allProducts[i].id %>">
                <img src="/images/products/<%=allProducts[i].image %>" alt="<%=allProducts[i].name %>" width="100%">
               </a>
                
                <p>$ <%=allProducts[i].price %></p>
                <div class="details-unidades-carrito">
                  <div>
                     <form action="/cantidad" method="GET">
                         <label>Unidades</label>
                         <select name="envase">
                            <option value="Growler">Growler</option>
                            <option value="Botella">Botella</option>
                         </select>
                         <select name="unidades">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                         </select>
                        </form>    
                   </div>
                    <div>
                     <i class="fas fa-shopping-cart"></i>
                     <input type="submit" value="Agregar al carrito">
                    </div>
                  </div>
               </article>
               <% } %>
         </div> 
    </section>
</main>
    <%- include('../partials/footer')  %> 
</body>
</html>