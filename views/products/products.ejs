<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head'), style %>
<body>
    <%- include('../partials/header') %>
<main>
    
    <section>
        <div class="button-create-product">
            <form action="/products/create" method="GET" >
                <button type="submit" class="action-button">CREAR PRODUCTO</button>
            </form>
        </div>
        <div class="details-imgarticle">
         <% for(i=0; i<allProducts.length; i++){ %> 
            <form action="/products/cart" method="post" class="product-form">
                <article>
             <input class="info" name="id" value="<%=allProducts[i].id %>">
               <div class="details-descripcion">
                  <h4>  <%=allProducts[i].name %></h4>
                  <input class="info" name="name" value="<%=allProducts[i].name %>"> 
                  <% if (allProducts[i].product_category_id == "1") { %>
                  <p>ALC: <%=allProducts[i].alc %> / IBU <%=allProducts[i].IBU %> </p>
               <% } %>
               </div>
               <a href="/products/detail/<%=allProducts[i].id %>">
                <img src="/images/products/<%=allProducts[i].image %>" alt="<%=allProducts[i].name %>" width="100%">
               </a>
                
                <p>$ <%=allProducts[i].price %></p>
                <input class="info" name="price" value="<%=allProducts[i].price %>">
                <div class="details-unidades-carrito">
                  <div>
                     <form action="/cantidad" method="post">
                         <label>Quiero</label>
                         <select name="unidades">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                         </select>
                         <select name="envase">
                            <option value="Botella">Botella/s</option>
                            <option value="Growler">Growler/s</option>
                         </select>
                        </form>    
                   </div>
                    <div>
                     <i class="fas fa-shopping-cart"></i>
                     <a href="products/cart"><input type="submit" value="Agregar al carrito"></a>
                    </div>
                  </div>
               </article>
            </form>
               <% } %>
         </div> 
    </section>
</main>
    <%- include('../partials/footer')  %> 
</body>
</html>